{
  "name": "Producto",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "comprar": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "Listamember",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Listamember",
      "permission": "ALLOW",
      "property": "limpiarLista"
    }
  ],
  "methods": {
    "limpiarLista": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "object",
          "required": false,
          "description": "El contexto de ejecución de la petición",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "productos",
          "type": "number",
          "root": true,
          "description": "Los productos modificados"
        }
      ],
      "description": "Modificar el atributo comprar de todos los productos de la lista del usuario para que aparezcan como comprados",
      "http": [
        {
          "path": "/limpiarLista",
          "verb": "put"
        }
      ]
    }
  }
}
