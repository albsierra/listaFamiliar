{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "solicitudes": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitud": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "object",
          "required": false,
          "description": "",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "mensaje",
          "type": "string",
          "root": true,
          "description": "El mensaje de éxito o fracaso de la acción"
        }
      ],
      "description": "Acepta la solicitud previo de otro usuario de pertenecer a la lista",
      "http": [
        {
          "path": "/aceptaSolicitud",
          "verb": "put"
        }
      ]
    }
  }
}
